#!/usr/bin/env bash
dir=`dirname $0`
#can we do something better here? :/
dark="'#070736364242:#DCDC32322F2F:#858599990000:#B5B589890000:#26268B8BD2D2:#D3D336368282:#2A2AA1A19898:#EEEEE8E8D5D5:#00002B2B3636:#CBCB4B4B1616:#58586E6E7575:#65657B7B8383:#838394949696:#6C6C7171C4C4:#9393A1A1A1A1:#FDFDF6F6E3E3:#838394949696:#00002B2B3636'"

current=$(dconf read /apps/guake/style/font/palette)

if [ $current = $dark ]
then
  ~/Development/Tools/guake-colors-solarized/set_light.sh
else
  ~/Development/Tools/guake-colors-solarized/set_dark.sh
fi
